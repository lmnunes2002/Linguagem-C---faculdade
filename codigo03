#include <iostream>

using namespace std;

int main(){
  int resultado, x, y;
  char op;
  
  cout << "Digite 2 inteiros: " << endl;
  cin >> x >> y;
  cout << "Digite a operação desejada (+, -, /, *):" << endl;
  cin >> op;

  switch(op){
    case '+': resultado = x + y;
    break;
    case '-': resultado = x - y;
    break;
    case '/': resultado = x / y;
    break;
    case '*': resultado = x * y;
  }

  cout << "=== Exibindo resultados ===" << endl;
  cout << "Seu resultado é " << resultado << endl;
}
